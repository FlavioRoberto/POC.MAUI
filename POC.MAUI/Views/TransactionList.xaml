<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POC.MAUI.Views.TransactionList"
             Title="TransactionList">
    <VerticalStackLayout>
        <Button Text="Cadastrar transação"
                BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Primary}}"
                TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Primary}}"
                Clicked="OnAddTransactionButtonClicked"/>

         <Button Margin="0,10" Text="Atualizar transação"
                 BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Primary}}"
                 TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Primary}}"
                 Clicked="OnUpdateTransactionButtonClicked"/>

        <ListView ItemsSource="{Binding Transactions}">
            
        </ListView>
    </VerticalStackLayout>
</ContentPage>
